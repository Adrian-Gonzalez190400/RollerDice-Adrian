<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"> <!-- match_parent OcuparÃ¡ toda el espacio de la pantalla -->

    <TextView
        android:id="@+id/txtSaludo"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:text="@string/lblSaludo"
        android:layout_gravity="center_horizontal"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/imgRoller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/empty_dice"
        android:layout_gravity="center_horizontal"
        />

    <ImageView
        android:id="@+id/imgRoller2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/empty_dice" />

    <Button
        android:id="@+id/btnRoller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/btnRoller" />

</LinearLayout>